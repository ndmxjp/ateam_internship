    <% if @blog.replies.empty? %>
      <p>コメントはありません</p>
    <% end %>

    <ol id="replies">
    <% @blog.replies.reverse.each do |reply| %>
      <li class="reply"><p>
        <span class="comment"><%= reply.comment %></span>
        <span>|</span>
        <span class="post-date"><%= "投稿日時:#{reply.created_at}" %></span>
      </p></li>
    <% end %>
    </ol>
