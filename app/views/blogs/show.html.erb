<h1>Mini Blog</h1>
<p><a href="/blogs">戻る</a></p>

<div class="blog-detail">
  <p>
    <span><%= @blog.id %>:</span>
    <span class="post-date">投稿日時: <%= @blog.created_at %></span>
    <span class="like">|
      <a href="/blogs/like/<%= @blog.id %>?is_show=1">いいね</a>
      : <%= @blog.like %>
    </span>
  </p>
  <p class="body"><%= @blog.body %></p>
</div>

<%= form_for(@reply, url:{controller:'replies', action:'create'}) do |form| %>
  <%= form.text_field :comment, placeholder: "コメントしよう" %>
  <%= form.submit "コメントする" %>
<% end %>

<hr>

